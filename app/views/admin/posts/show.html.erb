<!--管理者側投稿詳細-->

<div class='container my-5'>
  <div class='row'>
    <div class='col-md-5'>

<%= attachment_image_tag @post.user, :profile_image, :fill, 300, 300, fallback: 'no_image.jpg', size:'50x50' %>
<%= link_to admin_user_path class: 'no-underline', 'data-turbolinks': false do %>
  @<%= @post.user.name_id %>
<% end %>

<%= attachment_image_tag(@post, :image, width: '100%', height: '100%', fallback: 'no_image.jpg') %>
<%= @post.caption %>

<i class="fas fa-heart"></i>
<%= @post.favorites.count %>

<%= link_to "削除", post_path(@post), method: :delete, class:'btn btn-danger', 'data-confirm' => '本当に削除しますか？' %>

<%= render "admin/posts/comment_list", post: @post %>


    </div>
  </div>
</div>