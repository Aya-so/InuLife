<!--管理者側投稿一覧-->

<!--検索フォーム-->
<%= render "admin/searches/search_form" %>

<div class='container my-5'>
  <div class='row'>

    <% @posts.each do |post| %>
    <div class='col-md-3 offset-md-1'>

      <div class='card shadow'>
        <%= link_to admin_post_path(post), class: 'no-underline', 'data-turbolinks': false do %>
          <p class='text-center'><%= attachment_image_tag(post, :image, :fill, 250, 150, size:'250x150', fallback: 'no_image.jpg') %></p>

          <div class='card-body'>
            <p class='card-title text-right'><%= post.created_at.strftime('%Y/%m/%d') %></p>
            <p class='card-title'><%= post.caption %></p>
            <p class='card-text'><%= attachment_image_tag post.user, :profile_image, :fill, 300, 300, fallback: 'no_image.jpg', size:'50x50' %>@<%= post.user.name_id %></p>
          </div>

        <% end %>
      </div>

    </div>
    <% end %>

  </div>
</div>