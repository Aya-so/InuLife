<!--管理者側グループ詳細-->

<div class='container my-5'>

  <div class='row'>
    <div class='col-md-5 offset-md-1'>

      <h4><%= @group.name %></h4>

    </div>
  </div>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

      <table class='table table-success mt-3'>

        <tr>
          <th class='text-center'>概要</th>
          <td><%= @group.introduction %></td>
        </tr>

        <tr>
          <th class='text-center'>メンバー</th>
          <td>
            <%= @group.users.count %>人
          </td>
        </tr>
      </table>


      <p class='text-right'>最終更新日：<%= @group.updated_at.strftime('%Y/%m/%d') %></p>

      <p class='text-right'>作成日：<%= @group.created_at.strftime('%Y/%m/%d') %></p>




      <!--削除ボタン-->
      <div class='text-left'>
        <%= link_to 'グループを削除', admin_group_path(@group), method: :delete, class:'btn btn-danger', 'data-confirm' => '本当に削除しますか？' %>
      </div>

    </div>
  </div>

  <!--コメント機能-->
  <div class='row mt-5'>
    <div class='col-md-10 offset-md-1'>

      <div>
        <%= render 'admin/groups/grouppost_list', group_posts: @group_posts %>
      </div>

    </div>
  </div>

</div>