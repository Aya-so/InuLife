<!--管理者側イベント一覧-->

<div class='container my-5'>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

        <!--イベント追加ボタン-->
          <div class='text-right'>
            <%= link_to new_admin_event_path(@event), class: 'btn-link' do %>
              <i class='fas fa-plus-square fa-3x'></i>
            <% end %>
          </div>

    <table class='table table-hover'>
      <thead class='thead-light'>
        <tr>
          <th class='text-center'>登録日</th>
          <th class='text-center'>イベント</th>
          <th class='text-center'>概要</th>
          <th class='text-center'>開催期間</th>
          <th class='text-center'>ステータス</th>
          <th class='text-center'>詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
        <tr>

          <td class='text-center'><%= @events.created_at.strftime('%Y/%m/%d') %></td>

          <td class='text-center'><%= @events.title %></td>

          <td class='text-center'>@<%= @events.introduction %></td>

          <td class='text-center'><%= @events.start %> ～ <%= @events.finish %></td>

          <td class='text-center'><%= @events.event_status %></td>

      　　<td class='text-center'><%= link_to '詳細', admin_event_path(event.id) %></td>

      　</tr>
        <% end %>
      </tbody>
    </table>

    <!--ページネーション-->
    <div class='pagination'>
      <%= paginate @events %>
    </div>

    </div>
  </div>

</div>