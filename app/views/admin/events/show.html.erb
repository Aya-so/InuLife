<!--管理者側イベント詳細-->

<div class='container my-5'>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

      <div class='text-center'>
        <%= attachment_image_tag @event, :image, :fill, 300, 300, fallback: 'no_image.jpg', size:'300x300' %>
      </div>

    <table class='table mt-3'>
      <tbody>

        <tr>
          <th class='text-center'>イベント</th>
          <td><%= @event.title %></td>
        </tr>

        <tr>
          <th class='text-center'>概要</th>
          <td><%= @event.introduction %></td>
        </tr>

        <tr>
          <th class='text-center'>開催地</th>
          <td><%= @event.place %></td>
        </tr>

        <tr>
          <th class='text-center'>開催期間</th>
          <td><%= @event.start %> ～ <%= @event.finish %></td>
        </tr>

        <tr>
          <th class='text-center'>開催ステータス</th>

          <% if @event.event_status == 0 %>
            <td>開催予定</td>
          <% elsif @event.event_status == 1 %>
            <td class='text-danger'>開催中</td>
          <% elsif @event.event_status == 2 %>
            <td class='text-black-50'>終了</td>
          <% end %>
        </tr>

      </tbody>
    </table>

    <div class='text-right'>
      <%= link_to '編集', edit_admin_event_path, class: 'btn btn-outline-primary btn-sm' %>
      <%= link_to '削除', admin_event_path(@event), method: :delete, class: 'btn btn-outline-danger btn-sm', 'data-confirm' => '本当に削除しますか？' %>
    </div>

    </div>
  </div>

</div>