<!--管理者側イベント詳細-->

<div class='container my-5'>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

      <div class='text-center'>
        <%= attachment_image_tag @event, :image, :fill, 200, 300, fallback: 'no_image.jpg', size:'200x200' %>
      </div>

    <table class='table mt-3'>
      <tbody>

        <tr>
          <th class='text-center'>イベント</th>
          <td><%= @event.title %></td>
        </tr>

        <tr>
          <th class='text-center'>概要</th>
          <td><%= @event.introduction %></td>
        </tr>

        <tr>
          <th class='text-center'>開催地</th>
          <td><%= @event.place %></td>
        </tr>

        <tr>
          <th class='text-center'>開催期間</th>
          <td><%= @event.start %> ～ <%= @event.finish %></td>
        </tr>

        <tr>
          <th class='text-center'>開催ステータス</th>
          <td><%= @event.event_status %></td>
        </tr>

      </tbody>
    </table>

    <div class='text-right'>
      <%= link_to '編集', edit_admin_event_path, class: 'btn btn-outline-primary btn-sm' %>
    </div>

    </div>
  </div>

</div>